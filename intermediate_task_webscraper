# intermediate_task_webscraper.py
"""
Intermediate Task 1 – Web Scraper  
Using BeautifulSoup to extract data from a website.
"""

import requests
from bs4 import BeautifulSoup

def scrape_python_news():
    url = "https://www.python.org/"
    response = requests.get(url)

    if response.status_code != 200:
        print("Failed to fetch website!")
        return
    
    soup = BeautifulSoup(response.text, "html.parser")

    print("\nLatest Python.org News Headlines:\n")

    # Extract news items
    news_items = soup.select(".list-recent-posts li")

    for idx, item in enumerate(news_items, start=1):
        title = item.find("a").text.strip()
        date = item.find("time").text.strip()

        print(f"{idx}. {title}  —  ({date})")

if __name__ == "__main__":
    scrape_python_news()
