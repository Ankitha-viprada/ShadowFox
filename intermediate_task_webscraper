import requests
from bs4 import BeautifulSoup

def scrape_python_news():
    url = "https://www.python.org/"
    response = requests.get(url)

    if response.status_code != 200:
        print("Failed to fetch website!")
        return
    
    soup = BeautifulSoup(response.text, "html.parser")

    print("\nLatest Python.org News Headlines:\n")

    # UPDATED CSS SELECTOR (works in 2025)
    news_section = soup.find("ul", class_="list-widgets row")

    if not news_section:
        print("No news section found. Website layout changed.")
        return

    items = news_section.find_all("li")

    if not items:
        print("No news items found.")
        return

    for i, item in enumerate(items[:5], start=1):
        title = item.get_text(strip=True)
        print(f"{i}. {title}")

if __name__ == "__main__":
    scrape_python_news()
