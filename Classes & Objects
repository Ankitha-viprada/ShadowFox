# Task 8: Classes & Objects - Avengers

class Avenger:
    def __init__(self, name, age, gender, super_power, weapon, leader=False):
        self.name = name
        self.age = age
        self.gender = gender
        self.super_power = super_power
        self.weapon = weapon
        self.leader = leader

    def get_info(self):
        return {
            "Name": self.name,
            "Age": self.age,
            "Gender": self.gender,
            "Super Power": self.super_power,
            "Weapon": self.weapon,
            "Leader": self.leader
        }

    def is_leader(self):
        return self.leader

# Create 6 Avengers
avengers = [
    Avenger("Captain America", 101, "Male", "Super strength", "Shield", leader=True),
    Avenger("Iron Man", 48, "Male", "Technology", "Armor"),
    Avenger("Black Widow", 35, "Female", "Superhuman", "Batons"),
    Avenger("Hulk", 40, "Male", "Unlimited Strength", "No Weapon"),
    Avenger("Thor", 1500, "Male", "Super Energy", "Mj√∂lnir"),
    Avenger("Hawkeye", 40, "Male", "Fighting skills", "Bow and Arrows")
]

# Print info for each
for hero in avengers:
    print("\n---")
    info = hero.get_info()
    for k, v in info.items():
        print(f"{k}: {v}")
    print("Is leader?", hero.is_leader())
